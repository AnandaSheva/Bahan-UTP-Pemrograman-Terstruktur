#include <iostream>
using namespace std;

 int main(){
     int x, y;
     int* ptr;

     cout << "Masukkan digit ke-9 npm anda: ";
     cin >> x;
     cout << "Masukkan digit ke-10 npm anda: ";
     cin >> y;

     int npm = x * 10 + y;

     ptr = &npm;

     cout << "isi pointer mu " << *ptr << endl;
     cout << "data disimpan di " << ptr << endl;

     return 0;
}
